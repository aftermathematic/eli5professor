FROM python:3.10-slim AS builder

WORKDIR /app

# Install core dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir --target=/app/deps \
    tweepy \
    python-dotenv \
    openai \
    pyyaml \
    requests \
    torch \
    transformers

# Use a smaller base image for the final stage
FROM python:3.10-slim

WORKDIR /app

# Copy only the necessary dependencies
COPY --from=builder /app/deps /app/deps
ENV PYTHONPATH=/app/deps:$PYTHONPATH

# Copy source code and configuration
COPY src/ ./src/
COPY config/ ./config/
COPY .env .
COPY data/ /app/data/

# Create volume mount point for persistent data
VOLUME /app/data

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV LAST_SEEN_FILE=/app/data/last_seen_id.txt
ENV USE_LOCAL_MODEL_FALLBACK=false

# Default command to run the Twitter Bot
CMD ["python", "src/main.py"]
